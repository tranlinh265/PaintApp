<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linhtm.demopaintapp.MainActivity"
    android:background="@android:color/black"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:onClick="onClick"
        android:id="@+id/btn_clear"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        android:onClick="onClick"
        android:id="@+id/btn_image"
        android:layout_toRightOf="@id/btn_clear"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:id="@+id/btn_show"
        android:layout_toRightOf="@+id/btn_image"
        android:onClick="onClick"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv_background"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <com.example.linhtm.demopaintapp.CustomView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/custom_view"
            app:layout_constraintLeft_toLeftOf="@+id/iv_background"
            app:layout_constraintBottom_toBottomOf="@id/iv_background"
            app:layout_constraintRight_toRightOf="@id/iv_background"
            app:layout_constraintTop_toTopOf="@id/iv_background"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_result"/>
</RelativeLayout>
